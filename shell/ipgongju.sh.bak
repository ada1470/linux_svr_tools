# ä»å¤‡ä»½æ¢å¤é˜²ç«å¢™é…ç½®
restore_firewall() {
    echo -e "\nå¯ç”¨å¤‡ä»½:"
    mapfile -t backups < <(ls -t "$BACKUP_DIR"/*.txt 2>/dev/null)

    if [[ ${#backups[@]} -eq 0 ]]; then
        echo "æœªæ‰¾åˆ°å¤‡ä»½æ–‡ä»¶ã€‚"
        return
    fi

    # æ˜¾ç¤ºç¼–å·åˆ—è¡¨
    for i in "${!backups[@]}"; do
        printf "%2d. %s\n" $((i+1)) "${backups[$i]}"
    done
    echo " 0. è¿”å›èœå•"

    # æç¤ºè¾“å…¥
    echo -n "è¾“å…¥ç¼–å·æŸ¥çœ‹/æ¢å¤å¤‡ä»½: "
    read -r index

    if [[ "$index" == "0" ]]; then
        return
    fi

    if [[ "$index" =~ ^[0-9]+$ && "$index" -ge 1 && "$index" -le ${#backups[@]} ]]; then
        local selected="${backups[$((index-1))]}"
        echo -e "\nå·²é€‰æ‹©å¤‡ä»½: $selected"
        echo "éœ€è¦æ‰‹åŠ¨æ¢å¤ã€‚è¯·æ ¹æ®éœ€è¦å®¡æŸ¥è§„åˆ™å¹¶åº”ç”¨:"
        echo "----------------------------------------------------"
        cat "$selected"
        echo "----------------------------------------------------"
    else
        echo "æ— æ•ˆé€‰æ‹©ã€‚"
    fi
}

