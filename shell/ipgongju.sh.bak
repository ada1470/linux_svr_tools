                    "INSERT INTO firewall_ip (types, address, brief, addtime, chain) VALUES ('drop', '$ip', 'ç”±è„šæœ¬é˜»æ­¢', strftime('%Y-%m-%d %H:%M:%S', 'now'), 'INPUT');"

                echo "æˆåŠŸé˜»æ­¢$ipå¹¶è®°å½•åˆ°æ•°æ®åº“ã€‚"
            done
        fi
    fi

    if [[ ${#ranges_to_block[@]} -gt 0 ]]; then
        echo -e "\n== è¦é˜»æ­¢çš„IPèŒƒå›´: =="
        for range in "${ranges_to_block[@]}"; do
            echo "$range"
        done

        echo -e "\nè¦é˜»æ­¢è¿™äº›IPèŒƒå›´å—? [y/N]: "
        read -r confirm_ranges
