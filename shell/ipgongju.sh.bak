# æ£€æµ‹æœåŠ¡å™¨ç±»å‹ï¼ˆnginxæˆ–apacheï¼‰
detect_server_type() {
    if pgrep -x "nginx" >/dev/null; then
        SERVER_TYPE="nginx"
    elif pgrep -x "httpd" >/dev/null || pgrep -x "apache2" >/dev/null; then
        SERVER_TYPE="apache"
    else
        echo "æ— æ³•æ£€æµ‹æœåŠ¡å™¨ç±»å‹ã€‚"
        exit 1
