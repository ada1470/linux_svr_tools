bytes_to_human() {
    local bytes=$1
    local kib=$((1024))
    local mib=$((1024 * kib))
    local gib=$((1024 * mib))
    local tib=$((1024 * gib))

    if (( bytes >= tib )); then
        printf "%.2f TiB" "$(bc -l <<< "$bytes/$tib")"
    elif (( bytes >= gib )); then
        printf "%.2f GiB" "$(bc -l <<< "$bytes/$gib")"
    elif (( bytes >= mib )); then
        printf "%.2f MiB" "$(bc -l <<< "$bytes/$mib")"
    elif (( bytes >= kib )); then
        printf "%.2f KiB" "$(bc -l <<< "$bytes/$kib")"
    else
        printf "%d B" "$bytes"
    fi
}

