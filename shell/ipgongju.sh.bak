            for range in "${ranges_to_block[@]}"; do
                # ä½¿ç”¨firewall-cmdé˜»æ­¢èŒƒå›´
                echo "æ­£åœ¨é˜»æ­¢èŒƒå›´: $range"
                firewall-cmd --permanent --add-rich-rule="rule family='ipv4' source address='$range' drop"

                # æ·»åŠ å½“å‰æ—¶é—´æˆ³åˆ°firewall_ipè¡¨
