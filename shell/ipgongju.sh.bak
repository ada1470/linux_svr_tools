    # æ”¶é›†è¦é˜»æ­¢çš„IPå’ŒèŒƒå›´åˆ—è¡¨
    ips_to_block=()
    ranges_to_block=()

    # ä»æ³¨é‡Šä¸º"æœªçŸ¥"æˆ–"æœªåˆ—å‡ºçš„çˆ¬è™«"çš„æ–‡ä»¶ä¸­æ”¶é›†IP
    echo -e "\n== æ­£åœ¨æ”¶é›†è¦é˜»æ­¢çš„æ³¨é‡Šç‹¬ç«‹IP =="

    while read -r line; do
        ip=$(echo "$line" | awk '{print $3}')  # ä¿®æ­£ï¼š$3å¯¹åº”IP
        annotation=$(echo "$line" | awk '{print $NF}')

        if [[ "$annotation" == "æœªçŸ¥" || "$annotation" == *"æœªåˆ—å‡ºçš„çˆ¬è™«"* ]]; then
            ips_to_block+=("$ip")
